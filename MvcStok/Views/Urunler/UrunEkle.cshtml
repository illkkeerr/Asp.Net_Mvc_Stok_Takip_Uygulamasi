@model MvcStok.Models.Entity.TblUrunler
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@*<h2>UrunEkle</h2>*@
<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="UrunAd" placeholder="Ürün Adı..." required="" maxlength="50" />
    </div>
    <div>
        <label>Markası</label>
        <input type="text" class="form-control" name="Marka" placeholder="Marka..." maxlength="50" />
    </div>
    <div>
        <label>Ürün Kategori Seçiniz</label>
        @Html.DropDownListFor(m => m.TblKategoriler.KategoriId, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Fiyatı</label>
        <input type="text" class="form-control" name="Fiyat" />
    </div>
    <div>
        <label>Stok Adedi</label>
        <input type="text" class="form-control" name="Stok" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>
